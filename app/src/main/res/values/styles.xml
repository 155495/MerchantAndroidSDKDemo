<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- This is the way to override the styling -->
    <style name="MyCustomPhonePeTheme" parent="PhonePe.Theme.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="ph_colorPrimary">@color/colorPrimary</item>
        <item name="ph_colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="ph_colorAccent">@color/colorAccent</item>
        <item name="ph_textColor">@color/secondary_text</item>
        <item name="ph_textColorAccent">@color/secondary_text</item>
        <item name="ph_enableToolbarShadow">true</item>
        <item name="ph_merchantName">Merchant</item>
        <item name="ph_merchantLogo">
            https://d32dgd8o7pwmnt.cloudfront.net/images/merchants/200/200/M2306160483220675579140.png
        </item>
    </style>

    <style name="PhonePeTheme" parent="MyCustomPhonePeTheme" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
